@model MovieRentalApp.ViewModels.MovieViewModel
@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true,"Please fix the following errors.")
<div class="form-group">
    @Html.LabelFor(n => n.Name)
    @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(g => g.Name)
</div>
    <div class="form-group">
        @Html.LabelFor(n => n.DateAdded)
        @Html.TextBoxFor(n => n.DateAdded, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.DateAdded)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.ReleaseDate)
        @Html.TextBoxFor(n => n.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.NumberInStock)
        @Html.TextBoxFor(n => n.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.GenreId)
        @Html.DropDownListFor((g => g.GenreId), new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.GenreId)
    </div>
    @Html.HiddenFor(i=>i.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Submit</button>
}

