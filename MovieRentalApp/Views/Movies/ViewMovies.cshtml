@model IEnumerable<MovieRentalApp.Models.Movie>
@{
    ViewBag.Title = "ViewMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Movies</h2>
<p>
    @Html.ActionLink("New Movie", "NewMovie", "Movies", new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td><b>Movie</b></td>
            <td><b>Genre</b></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "EditMovie", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

